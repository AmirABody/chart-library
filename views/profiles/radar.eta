<% layout('../layout.eta') %>

<g transform="translate(<%= (it.canvas.computedWidth - it.canvas.width) / 2 %>, <%= it.canvas.header.height1 + it.canvas.header.height2 %>)">
  <g fill="transparent" stroke="#E1EDF2">
    <% it.pointsAttr.forEach(function(item){ %>
      <path d='<%= item %>'/>
    <% }) %>
  </g>
  <g fill="transparent" stroke="black" stroke-width="3">
    <path d='<%= it.dataAttr %>'/>
  </g>
  <g fill="white">
    <% it.dataPoints.forEach(function(item, index){ %>
      <circle cx='<%= item.x %>' cy='<%= item.y %>' r="<%= it.defaults.radar.dataPointsRadius %>" stroke='<%= it.colors[index] %>' stroke-width="1"/>
      <text x='<%= item.x %>' y='<%= item.y %>' font-size="12" font-weight="bold" font-family="Dana-fanum" text-anchor="middle" dominant-baseline="middle" fill='<%= it.colors[index] %>'><%~ it.dataset[index].data %></text>
    <% }) %>
  </g>
  <g>
    <% it.textPoints.forEach(function(item, index){ %>
      <text x='<%= item.x %>' y='<%= item.y %>' transform="translate(0, -<%= it.canvas.header.textYTransform %>)" font-size="12" font-family="Dana" font-weight="bold" text-anchor="middle" dominant-baseline="middle" fill="black"><%~ it.dataset[index].label %></text>
      <text x='<%= item.x %>' y='<%= item.y %>' transform="translate(0, +<%= it.canvas.header.textYTransform %>)" font-size="12" font-family="Dana" text-anchor="middle" dominant-baseline="middle" fill="black"><%~ it.dataset[index].subLabel %></text>
    <% }) %>
  </g>
  <g>
    <% it.ticksPoints.forEach(function(item, index){ %>
      <rect x='<%= item.x %>' y='<%= item.y %>' width='<%= it.defaults.radar.ticksLength %>' height='<%= it.defaults.radar.ticksLength %>' transform="translate(-<%= it.defaults.radar.ticksLength / 2 %>,-<%= it.defaults.radar.ticksLength / 2 %>)" fill="white"/>
      <text x='<%= item.x %>' y='<%= item.y %>' font-size="10" font-family="Dana-fanum" text-anchor="middle" dominant-baseline="middle" fill="#9CA3AF"><%~ it.ticksNumbers[index] %></text>
    <% }) %>
  </g>
</g>

