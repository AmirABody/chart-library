{{#> layout}}
<g font-family="Dana-FaNum">
  <g transform="translate({{spec.profile.center.x}}, {{spec.profile.center.y}})">
    <g fill="none" stroke="#E1EDF2">
      {{#each polygons as |polygon|}}
        <path d="{{polygon}}" />
      {{/each}}
    </g>
    <g fill="none" stroke="#111827" stroke-width="4">
      <path d="{{items.dAttr}}" />
    </g>
    <g fill="white">
      {{#each items.points as |item index|}}
        <circle
        cx="{{item.point.x}}"
        cy="{{item.point.y}}"
        r="{{@root.spec.items.dataPoints.radius}}"
        stroke="{{item.fill}}"
        stroke-width="2" />
        <text
        x="{{item.point.x}}"
        y="{{item.point.y}}"
        font-size="16"
        font-weight="600"
        text-anchor="middle"
        dy="5"
        fill="{{item.fill}}">
        {{item.mark}}
        </text>
      {{/each}}
    </g>
    <g fill="#4B5563" font-size="16" dy="5">
      {{#each items.labels as |item index|}}
        <text
        x="{{item.point.x}}"
        y="{{item.point.y}}"
        transform="translate(0, -{{@root.spec.items.labels.paddingY}})"
        font-weight="600"
        text-anchor="middle">
        {{item.label.name}}
        </text>
        <text
        x="{{item.point.x}}"
        y="{{item.point.y}}"
        transform="translate(0, +{{@root.spec.items.labels.paddingY}})"
        text-anchor="middle">
        ({{item.label.type}})
        </text>
      {{/each}}
    </g>
    <g>
      {{#each ticks as |tick index|}}
        <rect
        x="{{tick.point.x}}"
        y="{{tick.point.y}}"
        width="{{@root.spec.polygons.ticks.rectDim}}"
        height="{{@root.spec.polygons.ticks.rectDim}}"
        transform="translate(-{{math @root.spec.polygons.ticks.rectDim '/' 2}},-{{math @root.spec.polygons.ticks.rectDim '/' 2}})"
        fill="white" />
        <text
        x="{{tick.point.x}}"
        y="{{tick.point.y}}"
        font-size="12"
        font-family="Dana-FaNum"
        text-anchor="middle"
        dy="3"
        fill="#9CA3AF">
        {{tick.number}}
        </text>
      {{/each}}
    </g>
  </g>
</g>
{{/layout}}
